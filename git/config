[user]
  name = Bryan Wills
  email = bryanwi09@gmail.com
[pull]
  rebase = true
  default = current 
[push]
  default = current # push only current branch by default
  autoSetupRemote = true # Easier to push new branches
  followTags = true # push also tags
  gpgSign = false
[init]
  defaultBranch = main
[rerere]
  enabled = true
[submodule]
  recurse = true
  fetchJobs = 16
[core]
  autocrlf = input # keep newlines as in input
  compression = 9 # trade cpu for network
  fsync = none
  whitespace = error # threat incorrect whitespace as errors
  preloadindex = true # preload index for faster status
  editor = nvim
[fetch]
  prune = true
[commit]
  gpgsign = false
  template = ~/.config/git/template 
  verbose = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[lfs]
  locksverify = false
[alias]
  co = commit
  pu = puush
  pl = pull
  rt = remote
  tg = tag
  st = stash
  rb = rebase
  rs = reset
  cl = clone
  cr = clone --recursive
  pa = push --atomic
  rbi = rebase --interactive
  sc = clone --depth=1
[blame]
  coloring = highlightRecent
  date = relative
[diff]
  context = 3 # less context in diffs
  renames = copies # detect copies as renames in diffs
  interHunkContext = 10 # merge near hunks in diffs
[log]
  abbrevCommit = true # short commits
  graphColors = blue,yellow,cyan,magenta,green,red
[status]
  branch = true
  short = true
  showStash = true
  showUntrackedFiles = all # show individual untracked files
[rebase]
  autoStash = true
  missingCommitsCheck = warn # warn if rebasing with missing commits
[pager]
  branch = false # no need to use pager for git branch
  tag = false
  diff = diff-so-fancy | $PAGER # diff-so-fancy as diff pager
[pack]
  threads = 0 # use all available threads
  windowMemory = 1g # use 1g of memory for pack window
  packSizeLimit = 1g # max size of a packfile

# Integrity
[transfer]
  fsckObjects = true
[receive]
  fsckObjects = true
[fetch]
  fsckObjects = true
[branch]
  sort = -commiterdate
[tag]
  sort = -taggerdate
# Colors
[color "blame"]
  highlightRecent = black bold, 1 year ago,white,1 month ago,default,7 days ago,blue
[color "branch"]
  current     = magenta
  local       = default
  remote      = yellow
  upstream    = green
  plain       = blue
[color "diff"]
  meta        = black bold
  frag        = magenta
  context     = white
  whitespace  = yellow reverse
  old         = red
[interactive]
  diffFilter = diff-so-fancy --patch
  singleKey = true
# Third-party: diff-so-fancy
[diff-so-fancy]
  markEmptyLines = false

# URL shortcuts
[url "git@github.com:"]
  insteadOf = "gh:"

