#!/bin/bash
# Global post-init hook to automatically set up commitizen and pre-commit
# This hook runs after git init in new repositories

set -e

echo "ðŸš€ Setting up new repository with development tools..."

# Get repository path
repo_path=$(git rev-parse --show-toplevel 2>/dev/null || pwd)

# Copy commitizen configuration
if [ -f "$HOME/.config/commitizen/.czrc" ]; then
    echo "ðŸ“ Setting up commitizen configuration..."
    cp "$HOME/.config/commitizen/.czrc" "$repo_path/.czrc"
    echo "   âœ… Created .czrc"
else
    echo "   âš ï¸  Global commitizen config not found"
fi

# Create pyproject.toml if it doesn't exist
if [ ! -f "$repo_path/pyproject.toml" ]; then
    echo "ðŸ“‹ Creating pyproject.toml..."
    cat > "$repo_path/pyproject.toml" << 'PYEOF'
[tool.commitizen]
name = "cz_conventional_commits"
version = "1.0.0"
tag_format = "v$version"

[tool.commitizen.questions]
type = [
    "feat",
    "fix",
    "docs",
    "style",
    "refactor",
    "test",
    "chore",
    "perf",
    "ci",
    "build",
    "revert"
]
scope = "What is the scope of this change (e.g. component or file name)? (optional)"
subject = "Write a short, imperative description of the change:"
body = "Provide a longer description of the change: (optional)"
breaking = "Are there any breaking changes? (y/N)"
breaking_change = "Describe the breaking changes:"
issues = "Does this change affect any open issues? (y/N)"

[tool.commitizen.style]
commit_format = "{type}({scope}): {subject}"
example = "feat(auth): add user authentication system"
emoji = false
max_line_length = 72
PYEOF
    echo "   âœ… Created pyproject.toml"
fi

# Check if pre-commit is available and offer to set it up
if command -v pre-commit &> /dev/null; then
    echo "ðŸ”§ Pre-commit framework detected!"
    echo "   ðŸ’¡ To set up pre-commit hooks, run: pre-commit install"
    echo "   ðŸ’¡ To run pre-commit on all files: pre-commit run --all-files"
else
    echo "âš ï¸  Pre-commit framework not found"
    echo "   ðŸ’¡ Install with: brew install pre-commit"
fi

# Create a basic .gitignore if it doesn't exist
if [ ! -f "$repo_path/.gitignore" ]; then
    echo "ðŸš« Creating basic .gitignore..."
    cat > "$repo_path/.gitignore" << 'GITEOF'
# Dependencies
node_modules/
__pycache__/
*.pyc
*.pyo
*.pyd
.Python
env/
venv/
.venv/

# Build outputs
dist/
build/
*.egg-info/

# IDE files
.vscode/
.idea/
*.swp
*.swo
*~

# OS files
.DS_Store
Thumbs.db

# Logs
*.log
logs/

# Environment files
.env
.env.local
.env.*.local

# Temporary files
*.tmp
*.temp
GITEOF
    echo "   âœ… Created .gitignore"
fi

echo ""
echo "ðŸŽ‰ Repository setup complete!"
echo "   ðŸ’¡ Use 'cz commit' for conventional commits"
echo "   ðŸ’¡ Use 'git commit' for regular commits"
echo "   ðŸ’¡ Consider setting up pre-commit hooks for code quality"
echo ""
exit 0
